{
  "manifest_version": 3,
  "name": "Reminders",
  "version": "1.0.0",
  "description": "A simple productivity reminders extension",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "notifications",
    "background",
    "storage"
  ],
  "action": {
    "default_popup": "index.html"
  }
}