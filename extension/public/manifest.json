{
  "manifest_version": 3,
  "name": "Reminders",
  "version": "1.0.0",
  "description": "A simple productivity reminders extension",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "cookies",
    "notifications",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:3000/",
    "*://34.131.248.238/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "firebase-messaging-sw.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}