  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development ts-node src/index.ts",
    "start:pm2": "cross-env NODE_ENV=development pm2 start src/index.ts --name remind-me-api --interpreter ts-node",
    "start:pm2:prod": "cross-env NODE_ENV=production pm2 start dist/index.js --name remind-me-api",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "deploy": "npm run build && npm run start:pm2",
    "test:performance": "ts-node tests/performance.ts",
    "pm2:logs": "pm2 logs remind-me-api",
    "pm2:stop": "pm2 stop remind-me-api",
    "pm2:delete": "pm2 delete remind-me-api",
    "pm2:restart": "pm2 restart remind-me-api"
  },
